      base                 >=4.14 && <5
    , aeson                >=2.0
    , bytestring
    , text
    , time
    , containers
    , gitrev
    , persistent           >=2.14
    , persistent-template  >=2.12
    , persistent-postgresql >=2.13
    , resource-pool
    , monad-logger
    , resourcet
    , conduit
