{
  "name": "tdf-app",
  "version": "0.2.0",
  "private": true,
  "description": "TDF Records - CRM, Scheduling, Packages & Invoicing Platform",
  "workspaces": [
    "tdf-hq-ui",
    "tdf-mobile"
  ],
  "scripts": {
    "dev": "npm run dev:ui",
    "dev:ui": "npm run dev --workspace=tdf-hq-ui",
    "dev:mobile": "npm run start --workspace=tdf-mobile",
    "build": "npm run build:ui",
    "build:ui": "npm run build --workspace=tdf-hq-ui",
    "test": "npm run test:ui && npm run test:mobile",
    "ci:ui": "npm run build:ui && npm run test:ui",
    "build:ui:ci": "./scripts/build-ui-with-install.sh",
    "test:ui": "npm run test --workspace=tdf-hq-ui",
    "test:mobile": "npm run test --workspace=tdf-mobile",
    "lint": "npm run lint:ui && npm run lint:mobile",
    "lint:ui": "npm run lint --workspace=tdf-hq-ui",
    "lint:mobile": "npm run lint --workspace=tdf-mobile",
    "typecheck": "npm run typecheck:ui && npm run typecheck:mobile",
    "typecheck:ui": "npm run typecheck --workspace=tdf-hq-ui",
    "typecheck:mobile": "npm run typecheck --workspace=tdf-mobile",
    "quality": "./scripts/quality-check.sh",
    "generate:api:ui": "npm run generate:api --workspace=tdf-hq-ui",
    "generate:api:mobile": "npm run generate:api --workspace=tdf-mobile",
    "clean": "rm -rf node_modules tdf-hq-ui/node_modules tdf-mobile/node_modules",
    "clean:build": "rm -rf tdf-hq-ui/dist tdf-mobile/dist tdf-hq/.stack-work",
    "cron:sync-drive": "node scripts/sync-artist-drive.js"
  },
  "keywords": [
    "crm",
    "scheduling",
    "invoicing",
    "music-studio"
  ],
  "engines": {
    "node": ">=20.19.4"
  },
  "overrides": {
    "react-native-reanimated": "~4.1.1"
  },
  "author": "TDF Records",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/diegueins680/tdf-app"
  },
  "devDependencies": {
    "@testomatio/reporter": "^2.3.8",
    "playwright": "^1.58.2",
    "react-native-reanimated": "~4.1.1"
  }
}
