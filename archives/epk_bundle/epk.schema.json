{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TDF EPK",
  "type": "object",
  "required": [
    "artist",
    "slug",
    "status",
    "bio",
    "media",
    "contacts"
  ],
  "properties": {
    "id": {
      "type": [
        "string",
        "null"
      ]
    },
    "artist": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "country": {
          "type": [
            "string",
            "null"
          ]
        },
        "city": {
          "type": [
            "string",
            "null"
          ]
        },
        "genres": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "photo": {
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "url": {
              "type": "string",
              "format": "uri"
            },
            "alt": {
              "type": "string"
            }
          }
        }
      }
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "in_review",
        "approved",
        "published",
        "archived"
      ]
    },
    "visibility": {
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "public",
            "private"
          ]
        },
        "password_hash": {
          "type": [
            "string",
            "null"
          ]
        },
        "expires_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "noindex": {
          "type": "boolean",
          "default": false
        }
      },
      "default": {
        "mode": "public",
        "noindex": false
      }
    },
    "titles": {
      "type": "object",
      "properties": {
        "es": {
          "type": [
            "string",
            "null"
          ]
        },
        "en": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "bio": {
      "type": "object",
      "required": [
        "es"
      ],
      "properties": {
        "es": {
          "type": "string"
        },
        "en": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "highlights": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "year": {
            "type": [
              "integer",
              "null"
            ]
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      }
    },
    "media": {
      "type": "object",
      "required": [
        "embeds"
      ],
      "properties": {
        "hero_video": {
          "type": [
            "string",
            "null"
          ]
        },
        "gallery": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "format": "uri"
              },
              "alt": {
                "type": "string"
              }
            }
          }
        },
        "embeds": {
          "type": "object",
          "properties": {
            "spotify": {
              "type": [
                "string",
                "null"
              ]
            },
            "apple_music": {
              "type": [
                "string",
                "null"
              ]
            },
            "soundcloud": {
              "type": [
                "string",
                "null"
              ]
            },
            "bandcamp": {
              "type": [
                "string",
                "null"
              ]
            },
            "youtube": {
              "type": [
                "string",
                "null"
              ]
            },
            "vimeo": {
              "type": [
                "string",
                "null"
              ]
            }
          }
        }
      }
    },
    "press_quotes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "quote": {
            "type": "string"
          },
          "source": {
            "type": [
              "string",
              "null"
            ]
          },
          "url": {
            "type": [
              "string",
              "null"
            ],
            "format": "uri"
          }
        }
      }
    },
    "technical": {
      "type": "object",
      "properties": {
        "tech_rider_url": {
          "type": [
            "string",
            "null"
          ],
          "format": "uri"
        },
        "stage_plot_url": {
          "type": [
            "string",
            "null"
          ],
          "format": "uri"
        },
        "input_list_url": {
          "type": [
            "string",
            "null"
          ],
          "format": "uri"
        }
      }
    },
    "downloads": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "file_url": {
            "type": "string",
            "format": "uri"
          },
          "size_mb": {
            "type": [
              "number",
              "null"
            ]
          }
        }
      }
    },
    "upcoming_shows": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "city": {
            "type": [
              "string",
              "null"
            ]
          },
          "venue": {
            "type": [
              "string",
              "null"
            ]
          },
          "url": {
            "type": [
              "string",
              "null"
            ],
            "format": "uri"
          }
        }
      }
    },
    "contacts": {
      "type": "object",
      "required": [
        "press"
      ],
      "properties": {
        "press": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "phone": {
              "type": [
                "string",
                "null"
              ]
            }
          }
        },
        "management": {
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "phone": {
              "type": [
                "string",
                "null"
              ]
            }
          }
        },
        "booking": {
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "phone": {
              "type": [
                "string",
                "null"
              ]
            }
          }
        }
      }
    },
    "seo": {
      "type": "object",
      "properties": {
        "meta_title_es": {
          "type": [
            "string",
            "null"
          ]
        },
        "meta_title_en": {
          "type": [
            "string",
            "null"
          ]
        },
        "meta_description_es": {
          "type": [
            "string",
            "null"
          ]
        },
        "meta_description_en": {
          "type": [
            "string",
            "null"
          ]
        },
        "og_image_url": {
          "type": [
            "string",
            "null"
          ],
          "format": "uri"
        }
      }
    },
    "created_at": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "updated_at": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    }
  }
}